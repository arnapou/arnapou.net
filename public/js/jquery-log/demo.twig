<script type="text/javascript">
    $(window).load(function() {
        jLog.show();
        jLog.debug('Hello World !');
    });

    function sample1() {
        window.setTimeout(function() {
            jLog.debug('this is a debug message');
            jLog.info('this is an info message');
            jLog.warn('this is a warning message');
            jLog.error('this is an error message');
        }, 5);
    }

    function sample2() {
        window.setTimeout(function() {
            var test, i, j, n;
            jLog.timer('main');
            for(j=1; j<6; j++) {
                jLog.timer('loop');
                test = '';
                n = Math.floor(Math.random()*16)*1000+4000;
                for(i=0; i<n; i++) {
                    test += '-';
                }
                jLog.timer('loop', 'n�'+j+', '+n+' loops');
            }
            jLog.timer('main', 'main program');
        }, 5);
    }

    function sample3(type, nb) {
        window.setTimeout(function() {
            var msg = document.getElementById('s3Message').value;
            var i;
            if(type == 'debug' || type == 'all') {
                for(i=0; i<nb; i++) {
                    jLog.debug(msg+' ['+(i+1)+']');
                }
            }
            if(type == 'info' || type == 'all') {
                for(i=0; i<nb; i++) {
                    jLog.info(msg+' ['+(i+1)+']');
                }
            }
            if(type == 'warn' || type == 'all') {
                for(i=0; i<nb; i++) {
                    jLog.warn(msg+' ['+(i+1)+']');
                }
            }
            if(type == 'error' || type == 'all') {
                for(i=0; i<nb; i++) {
                    jLog.error(msg+' ['+(i+1)+']');
                }
            }
        }, 5);
    }

    function sample4(type, test) {
        window.setTimeout(function() {
            switch(test) {
                case 1:
                    jLog.filter(type, true);
                    break;
                case 2:
                    jLog.filter(type, false);
                    break;
                case 3:
                    jLog.toggle_filter(type);
                    break;
                case 4:
                    jLog.filter('debug', true);
                    jLog.filter('info', true);
                    jLog.filter('warn', true);
                    jLog.filter('error', true);
                    jLog.filter('timer', true);
                    break;
                case 5:
                    jLog.filter('debug', false);
                    jLog.filter('info', false);
                    jLog.filter('warn', false);
                    jLog.filter('error', false);
                    jLog.filter('timer', false);
                    break;
                case 6:
                    jLog.toggle_filter('debug');
                    jLog.toggle_filter('info');
                    jLog.toggle_filter('warn');
                    jLog.toggle_filter('error');
                    jLog.toggle_filter('timer');
                    break;
            }
        }, 5);
    }
</script>
