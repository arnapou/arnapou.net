{% extends "@includes/base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('vendor/highlight.css') }}" rel="stylesheet">
    <style>
        .post-preview a {
            outline: 0 !important;
        }
    </style>
{% endblock %}


{% block header_bg %}bg.jpg{% endblock %}

{% block h1 %}{{ h1 }}{% endblock %}

{% block subh1 %}{{ subh1 }}{% endblock %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">

                {% for post in posts %}

                    <div class="post-preview">
                        <a href="./{{ post.baseurl }}/">
                            <h2 class="post-title">{{ post.title }}</h2>
                            <h3 class="post-subtitle">{{ post.subtitle }}</h3>
                        </a>
                        <p class="post-meta">{{ post.date }}</p>
                    </div>

                    {% if not loop.last %}
                        <hr>
                    {% endif %}
                {% endfor %}

            </div>
        </div>
    </div>

{% endblock %}
